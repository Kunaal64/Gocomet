# Gaming Leaderboard Backend

# PostgreSQL Configuration
DATABASE_URL=postgresql://postgres:<your_password>@localhost:5432/gaming_leaderboard
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=<your_password>
DB_NAME=gaming_leaderboard
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
PORT=8000
NODE_ENV=development

# CORS (comma-separated origins, or * for all)
CORS_ORIGIN=*

# New Relic Monitoring (optional â€” 100GB free tier at newrelic.com)
NEW_RELIC_LICENSE_KEY=<your_license_key>
NEW_RELIC_APP_NAME=Gaming-Leaderboard

# Cache Configuration (TTL in seconds)
CACHE_TTL_LEADERBOARD=10
CACHE_TTL_RANK=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
