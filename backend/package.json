{
  "name": "gaming-leaderboard-backend",
  "version": "1.0.0",
  "description": "High-performance gaming leaderboard system with optimized APIs, caching, and real-time updates",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --verbose --forceExit --detectOpenHandles",
    "migrate": "node migrations/run.js",
    "seed": "node migrations/run.js --seed-small",
    "seed:full": "node migrations/run.js --seed"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "newrelic": "^12.25.1",
    "pg": "^8.13.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": [
      "./tests/setup.js"
    ]
  }
}
